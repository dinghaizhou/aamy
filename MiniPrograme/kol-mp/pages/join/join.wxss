/* pages/join/join.wxss */
.join {
    background:#f5f5f5;
    height:100%;
    padding-bottom: 80px;
}
.join .title {
    font-weight: bold;
    font-size: 19px;
    color: #4A4A4A;
    letter-spacing: 0;
    padding: 26px;
    text-align: center;
    background: #fff;
}
.join .btn-min {
    width: 133px;
    height: 32px;
}
.join .submit {
    position: fixed;
    bottom: 0;
    height: 50px;
    background: #D83B2A;
    color: #fff;
    font-size: 14px;
    text-align: center;
    line-height: 50px;
    width: 100%;
}
.join .submit:active {
    opacity: 0.5;
}