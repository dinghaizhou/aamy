/* component/dialog/dialog.wxss */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:opacity .3s;
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog .weui-dialog__bd {
    padding: 0;
}
.close-x {
    width:100%;
    height: 40px;
    position: relative;
}
.close-x .icon{
    position: absolute;
    right: 40rpx;
    top: 10rpx;
    font-size: 28px;
    font-weight: 200;
    transform: scaleY(0.8)
}