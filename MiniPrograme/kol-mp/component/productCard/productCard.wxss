/* component/productCard/productCard.wxss */

.product-card {
    margin-bottom: 12rpx;
}

image {
    width:100%;
    height: 360rpx;
}
.content {
    width:100%;
    height: 176rpx;
    padding:20rpx 36rpx 20rpx 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    border-bottom: 1px solid #DDDDDD;
}
.content .title {
    line-height: 22px;
    font-family: PingFangSC-Semibold;
    font-size: 16px;
    color: #4A4A4A;
    letter-spacing: 0;
    font-weight: 500;
}
.content .btn-area {
    font-size: 14px;
    line-height: 20px;
    display:flex;
    justify-content: space-between;
    align-items:center;
}

.content .btn {
    width: 180rpx;
    height: 64rpx;
    background: #D83B2A;
    border-radius: 8px;
    color: #fff;
    font-size: 14px;
    text-align: center;
    line-height: 64rpx;
}
.content .btn:active {
    opacity: 0.5;
}
.content .btn.disabled {
    background: #eee;
}
.content .btn.disabled:active {
    opacity: 1;
}

